<?xml version="1.0" encoding="utf-8"?>
<org.nefrologia.appnefrologia.customview.MenuItem xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/card_menu_item"
                                    android:layout_margin="4sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:background="@color/primary_dark">

        <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/microscope"
                android:padding="10dp"
                android:id="@+id/mnu_image"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Titulo"
                android:id="@+id/mnu_title"
                android:textColor="@color/icons"
                android:textStyle="bold"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/accent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mnu_information"
                android:gravity="center"
                android:padding="5dp"
                android:text="Informacion"
                android:textColor="@color/primary_light"/>

    </LinearLayout>
</org.nefrologia.appnefrologia.customview.MenuItem>