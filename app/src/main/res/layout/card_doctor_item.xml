<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardBackgroundColor="#d2d1d1"
                                    app:cardElevation="20dp"
                                    android:id="@+id/card_doctor_item"
                                    android:orientation="horizontal">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="10dp"
                  android:layout_margin="10dp"
                  android:background="#fff">
        <TextView
                android:id="@+id/doctor_name"
                android:text="Nombre del doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textSize="20dp"
                android:textColor="#000"/>

        <TextView
                android:id="@+id/doctor_dni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="5dp"
                android:text="DNI"
                android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
                android:id="@+id/doctor_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="5dp"
                android:text="doctor@mclovin.com"
                android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
                android:id="@+id/doctor_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="5dp"
                android:text="945000681"
                android:textAppearance="?attr/textAppearanceListItem"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
